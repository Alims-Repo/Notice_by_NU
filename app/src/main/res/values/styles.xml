<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="Back">@color/colorWhite</item>
        <item name="BlackWhite">@color/colorBlack</item>
        <item name="icon_color">@color/colorAccent</item>
        <item name="textcolor">@color/colorBlack</item>
        <item name="chipStyle">@style/Chip_Style</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="Back">@color/colorDarkGray</item>
        <item name="android:navigationBarColor">@color/colorBlack</item>
        <item name="BlackWhite">@color/colorWhite</item>
        <item name="icon_color">@color/colorWhite</item>
        <item name="textcolor">@color/colorWhite</item>
        <item name="chipStyle">@style/Chip_Style</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    //Dialog Style...
    <style name="AlertDialogLight" parent="Base.Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_design_light</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogDark" parent="Base.Theme.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_design_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="Chip_Style" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/backgeound_chip_color</item>
        <item name="android:textColor">@color/text_chip_color</item>
        <item name="checkedIconVisible">true</item>
        <item name="checkedIcon">@drawable/ic_checked</item>
    </style>

</resources>